<div class="container">
  <% @orders.each do |order| %>
  <h2><%= order.user.email %></h2>
  <%= order.amount %>
  <%= order.created_at.strftime('%D %M %Y') %>
  <% order.cart.line_items.each do |line_item| %>
  <%= line_item.car.name %>
  <% end %>
  <% end%>
  <h1>total:</h1>
  <%= @order %>
</div>
