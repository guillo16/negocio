<div class="container">
  <div class="keep-shopping">
    <h2><i class="fas fa-shopping-bag"></i> Shopping Cart</h2>
  </div>
  <div class="cart-items">
    <%= render(@cart.line_items) %>
  </div>

  <div class="delete-cart">
    <%= button_to 'Empty Cart', @cart, method: :delete, data: { confirm: "Are you sure? " }, class: "button is-danger" %>
    <span class="total-price">Total:</span> <%= number_to_currency(@cart.total_price) %>
    <%= link_to 'Back to Store', cars_path, class: 'button-shopping' %>
  </div>
</div>
