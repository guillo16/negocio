<div class="cart-container">
  <div class="keep-shopping">
    <h2><i class="fas fa-shopping-bag"></i> Shopping Cart</h2>
    <p><%= link_to 'X', cars_path %></p>
  </div>
  <div class="cart-items">
    <%= render(@cart.line_items) %>
  </div>
  <div class="delete-cart">
    <p><%= button_to 'Empty Cart', @cart, method: :delete, data: { confirm: "Are you sure? " }, class: "button-delete" %></p>
  </div>
  <div class="price">
    <h3>Total</h3>
    <h2><span class="total-price"></span><%= number_to_currency(@cart.total_price) %></h2>
  </div>
  <div class="order-checkout">
    <p><%= form_tag orders_path do %>
      <%= hidden_field_tag 'cart_id', @cart.id %>
      <%= submit_tag 'GO TO CHECKOUT', class: 'button-order' %>
      <% end %></p>
    </div>
  </div>
</div>
